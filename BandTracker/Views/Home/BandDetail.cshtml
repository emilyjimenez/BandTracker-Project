@{
  Layout = "_Layout";
}
<div class="container">
  <h1>Band Tracker</h1>
<h2>Bands:</h2>
@if (Model.Count != 0)
{
  <ul>
    @foreach (var band in Model)
    {
      <li><a href="/bands/@band.Id">@band.Name</a></li>
    }
  </ul>
}
<h4><a href="/bands/new">Add a new </a></h4>
<h4><a href="/">Return home</a></h4>
</div>
