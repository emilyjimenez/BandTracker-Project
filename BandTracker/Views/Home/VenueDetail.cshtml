@{
  Layout = "_Layout";
}

<div class="container">
  <h1>Band Tracker</h1>
<h2>Venue:</h2>
<p>Venue Name: @Model["venue"].Name</p>
<p>Venue Location: @Model["venue"].Address</p>
<h4><a href='/venues/@Model["venue"].Id/update'>Update Venue</a></h4>
<br></br>
<p>Bands played:</p>
  @foreach (var band in @Model["venueBands"])
  {
    <p>@band.Name</p>
    <p>@band.Genre</p>
  }

  <h4>Add a band to this Venue:</h4>
  <form action='/venues/@Model["venue"].Id/tasks/new' method='post'>
    <label for='band-id'>Select a band</label>
    <select id='band-id' name='band-id' type='text'>
      @foreach (var band in @Model["bands"])
      {
        <option value='@band.Id'>@band.Name</option>
      }
    </select>
    <button type='submit'>Add</button>
  </form>

<h4><a href="/">Return home</a></h4>
</div>
